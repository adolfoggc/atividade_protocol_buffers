<div>
	<% if !@lights.status.nil? %>
		<hr>
		Lampada:
		<hr>
		<hr>
		<%= @lights.estado_lampada %>
		<hr>
		<br>
	<% end %>
	<% if !@tv.status.nil? %>
		<hr>
		Tv:
		<hr>
		<hr>
		<%= @tv.estado_tv %>
		<% if @tv.status == 1 %>
			<%= "Canal: #{@tv.channel}" %>
		<% end %>
		<hr>
		<br>
	<% end %>
	<% if !@termo.temperature.nil? %>
		<hr>
		Temperatura:
		<hr>
		<hr>
		<%= "Temperatura: #{@termo.celsius} / #{@termo.farenheit} / #{@termo.kelvin}" %>
		<hr>
	<% end %>
</div>